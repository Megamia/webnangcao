@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                
                <div class="row">
                        <div class="featured-games header-text">
                            <div class="owl-features owl-carousel">
                                @{
                                    var countbackground = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    if (countbackground < 6)
                                    {
                                        if (item.moviebackground != null)
                                        {
                                        <div class="item">
                                            <div class="thumb">
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.moviebackground)" alt="">
                                                <div class="hover-effect">
                                                    <h6>@item.moviename</h6>
                                                </div>
                                            </div>

                                        </div>
                                            countbackground++;
                                        }
                                    }
                                }

                            </div>
                        </div>
                    
                </div>
                    
                    <!-- ***** Most Popular Start ***** -->
                    <div class="most-popular">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-section">
                                    <h4><em>Phim Mới</em> Hôm Nay</h4>
                                </div>
                                @{
                                    var count = 0;
                                }
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        if (count < 4)
                                        {
                                    <div class="col-lg-3 col-sm-6">
                                        <a href="@Url.Action("Detail", "ListMovie", new { id = item.movieid})">

                                            <div class="item">
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.movieimage)" alt="">
                                                <h4>@item.moviename</h4>

                                            </div>
                                        </a>
                                    </div>
                                        
                                            count++;
                                        }
                                    }
                                </div>
                            </div>
                            <div class="main-button">
                                <a  href="@Url.Action("Index", "ListMovie")">Xem Thêm</a>
                            </div>
                        </div>
                    </div>
                    <!-- ***** Most Popular End ***** -->
                </div>
            </div>
    </div>
</div>

