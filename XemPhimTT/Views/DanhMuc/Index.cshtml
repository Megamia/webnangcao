@{
    var categories = ViewBag.Categories as List<string>;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                @if (categories != null)
                {
                    <ul>
                        @foreach (var category in categories)
                        {
                            <li><a href="#">@category</a></li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>