@{
    var isLoggedIn = Session["username"] != null;
    var username = isLoggedIn ? Session["username"].ToString() : string.Empty;
    var movieDetailUrl = Url.Action("Detail", "ListMovie");
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>TAIHEN - Xem phim trực tuyến</title>

    <!-- Bootstrap core CSS -->
    <link href="~/assets/web/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link href="~/assets/web/css/XemPhimTT.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/web/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/web/css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="~/assets/web/css/owl.css">
    <link rel="stylesheet" href="~/assets/web/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!--

    TemplateMo 579 Cyborg Gaming

    https://templatemo.com/tm-579-cyborg-gaming

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Action("Index", "Home")" class="logo">
                            <img src="~/assets/web/images/taihen-logo.png" alt="">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Search End ***** -->
                        <div class="search-input">
                            <form id="search">
                                <input type="text" placeholder="Type Something" id="searchText" name="searchKeyword" oninput="handleSearch(event)" />
                                <i class="fa fa-search"></i>
                            </form>
                            <ul id="searchResults" class="search-results"></ul>
                        </div>
                        <!-- ***** Search End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">


                            <li>
                                <a href="@Url.Action("Index", "DanhMuc")" class="dropdown-trigger">Danh Mục</a>
                            </li>


                            @if (isLoggedIn)
                            {
                                <li><a href="@Url.Action("Index", "Home")">Đăng ký gói dịch vụ</a></li>
                                <li>
                                    <div class="dropdown">
                                        <div class="dropdown-trigger">
                                            <a>@username <img src="~/assets/web/images/profile-header.jpg" alt=""></a>
                                        </div>

                                        <div class="dropdown-menu">
                                            <ul>
                                                <li class="li-login"><a href="@Url.Action("InfoAccount", "Account", new { id = (int)Session["userId"]})">Thông tin tài khoản</a></li>
                                                @if ((int)Session["userId"] == 2)
                                                {
                                                    <li class="li-login"><a href="@Url.Action("Index", "Movie", new { area = "Admin" })">Quản lý trang web</a></li>
                                                }
                                                <li class="li-login"><a href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Login", "Account")">Đăng Nhập <img src="~/assets/web/images/profile-header.jpg" alt=""></a>
                                </li>
                            }
                            >
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>

                    </nav>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Edited by <a href="#">TAIHEN</a> TEAM.

                    </p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/assets/web/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/web/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/assets/web/js/isotope.min.js"></script>
    <script src="~/assets/web/js/owl-carousel.js"></script>
    <script src="~/assets/web/js/tabs.js"></script>
    <script src="~/assets/web/js/popup.js"></script>
    <script src="~/assets/web/js/custom.js"></script>
    <script src="~/assets/web/js/check-logged.js"></script>
    <script src="~/assets/web/js/search.js"></script>
</body>

</html>
