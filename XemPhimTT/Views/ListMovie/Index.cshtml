@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movie = Model;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Most Popular Start ***** -->
           
                    <div class="movie-library header-text">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-section">
                                    <h4><em>Phim Mới</em> Hôm Nay</h4>
                                </div>
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                    <div class="col-lg-3 col-sm-6">
                                        <a href="@Url.Action("Detail", "ListMovie", new { id = item.movieid})">
                                            <div class="item">
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.movieimage)" alt="">
                                                <h4>@item.moviename</h4>

                                            </div>
                                            </a>
                                    </div>

                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- ***** Most Popular End ***** -->
                </div>
            </div>
    </div>
</div>
    

