
@{
    ViewBag.Title = "InfoAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = @Model.Data1.userid;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="d-flex">
                    <div><img class="avatar-acc" src="~/assets/web/images/stream-05.jpg" alt=""></div>
                    <div>
                        <div>
                            <span class="text-pink fs-5">Tên tài khoản: </span>
                            <span class="text-white  fs-5">@Model.Data1.username</span>
                        </div>
                        <div>
                            <span class="text-pink  fs-5">Tên người dùng: </span>
                            <span class="text-white  fs-5">@Model.Data1.fullname</span>
                        </div>
                        <div>
                            <span class="text-pink fs-5">Email: </span>
                            <span class="text-white fs-5">@Model.Data1.email</span>
                        </div>
                        <div class="d-flex pt-2">
                            <a href="@Url.Action("EditAccount", "Account", new { id =  id})">
                                <div class="btn-acc">
                                    Sửa thông tin
                                </div>
                            </a>
                            <a href="@Url.Action("EditAccount", "Account", new { id =  id})">
                                <div class="btn-acc">
                                    Đổi mật khẩu
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>