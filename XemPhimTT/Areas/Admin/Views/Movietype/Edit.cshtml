@model XemPhimTT.Models.Movietype

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>EDIT MOVIE TYPE</h2>


@using (Html.BeginForm("Save", "Movietype", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.movietypeid)

        <div class="form-group">
            <span class = "control-label col-md-2">Loại phim</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.movietypename, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.movietypename, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
