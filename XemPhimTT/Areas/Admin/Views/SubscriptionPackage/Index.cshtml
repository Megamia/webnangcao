@model IEnumerable<XemPhimTT.Models.SubscriptionPackage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Gói Đăng Ký</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <span>Tên gói</span>
                        </th>
                        <th>
                            <span>Giá (VNĐ)</span>
                        </th>
                        <th>
                            <span>Thời hạn (Ngày)</span>
                        </th>
                        <th>
                            <span>Mô tả</span>
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.expiry)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.subscriptionpackageid }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.subscriptionpackageid })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>