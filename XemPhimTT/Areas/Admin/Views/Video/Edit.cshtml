@model XemPhimTT.Models.Video

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Save","Video",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Video</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.videoid)

    <div class="form-group">
        <span class="control-label col-md-2">Tên</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.videoname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.videoname, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <span class="control-label col-md-2">Phim</span>
        <div class="col-md-10">
            @Html.DropDownList("movieid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.movieid, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <span class="control-label col-md-2">Tên file</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.videofilename, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.videofilename, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <span class="control-label col-md-2">Video</span>
        <div class="col-md-10">
            <input type="file" name="fvideo" id="fvideo" class="form-control" style="width:100%" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
