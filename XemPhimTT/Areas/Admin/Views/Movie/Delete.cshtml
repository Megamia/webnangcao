@model XemPhimTT.Models.Movie

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>Tên phim</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.moviename)
        </dd>

        <dt>
            <span>Thời lượng(Tập)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duration)
        </dd>

        <dt>
            <span>Năm phát hành</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.releaseyear)
        </dd>

        <dt>
            <span>Đạo diễn</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.director)
        </dd>

        <dt>
            <span>Mô tả</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            <span>Loại phim</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Movietype.movietypename)
        </dd>  

    </dl>

    @using (Html.BeginForm("Remove", "Movie", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(Model => Model.movieid)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
