@model XemPhimTT.Models.Movie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Save", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Movie</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.movieid)

    <div class="form-group">
        <span class="control-label col-md-2">Tên phim</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.moviename, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.moviename, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Thời lượng</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.duration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.duration, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Năm phát hành</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.releaseyear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.releaseyear, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Đạo diễn</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.director, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.director, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Mô tả</span>
        <div class="col-md-10">
            <textarea class="form-control" id="description" name="description" rows="4" cols="40">@Model.description</textarea>
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Loại phim</span>
        <div class="col-md-10">
            @Html.DropDownList("movietypeid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.movietypeid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Ảnh</span>
        <div class="col-md-10">
            <input type="file" name="fimage" id="fimage" class="form-control" style="width:100%" />
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Ảnh bìa</span>
        <div class="col-md-10">
            <input type="file" name="fbackground" id="fbackground" class="form-control" style="width:100%" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
